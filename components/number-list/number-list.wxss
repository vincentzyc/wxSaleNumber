.sticky-fixed {
	position: sticky;
	top: 0;
	right: 0;
	left: 0;
	z-index: 99;
	background-color: #fff;
}

.search-wrap {
	display: flex;
	height: 66rpx;
	align-items: center;
	width: 96%;
	margin: 10rpx auto;
	border: 1px solid rgba(150, 150, 150, 1);
	border-radius: 16rpx;
	overflow: hidden;
}
.search-wrap-change {
	padding: 0 20rpx;
	text-align: center;
	font-size: 28rpx;
}
.search-wrap-text {
	width: 70rpx;
}
.long-input {
	font-size: 28rpx;
	padding: 0 20rpx;
	width: 100%;
	flex: auto;
}
.search-wrap .input-wrap,
.search-wrap .input-nums {
	height: 100%;
	border-left: 1px solid rgba(150, 150, 150, 1);
}
.search-wrap-checklabel {
	width: 80rpx;
	color: #969696;
	padding-left: 6rpx;
	font-size: 24rpx;
}
.search_btn {
	font-size: 28rpx;
	height: 68rpx;
}
.search-rules {
	padding: 20rpx;
	font-size: 28rpx;
}
.search-rule {
	width: 33.33333%;
}

.loading-text {
	position: relative;
	padding: 30rpx 20rpx 50rpx 20rpx;
	text-align: center;
	color: #999;
	font-size: 28rpx;
}
.num-waterfall {
	display: flex;
	padding: 10rpx;
	justify-content: space-between;
	flex-wrap: wrap
}
.num-waterfall .num-wrap {
	display: inline-flex;
	width: 49.5%;
}
.num-waterfall .num-item {
	position: relative;
	width: 100%;
	border: 1px solid rgba(200, 200, 200, 1);
	display: flex;
	flex-direction: column;
	padding: 16rpx;
	font-size: 28rpx;
	background-color: rgba(252, 252, 252, 1);
	margin: 4rpx 0;
}

.num-waterfall .area-text {
	font-size: 28rpx;
	line-height: 48rpx;
}
.num-waterfall .num-info .num-char {
	display: flex;
	font-size: 35rpx;
	font-weight: bold;
}
.num-waterfall .price {
	display: flex;
	margin: 20rpx 0 0 0;
	align-items: baseline;
}
.num-waterfall .color-gary {
	color: rgba(150, 150, 150, 1);
}
.num-waterfall .old-price {
	text-decoration-line: line-through;
	margin-left: 16rpx;
	font-size: 20rpx;
}
.num-waterfall .tip-text {
	margin-left: 10rpx;
	font-size: 28rpx;
}
.num-waterfall .color-orange {
	color: #FF6600;
	font-weight: bold;
	font-size: 36rpx;
}
.num-waterfall .red-tag {
	position: absolute;
	top: 18rpx;
	right: 10rpx;
	width: 40rpx;
	height: 40rpx;
	color: #fff;
	background-color: rgba(173, 0, 0, 1);
	border-radius: 6px;
	line-height: 40rpx;
	text-align: center;
}