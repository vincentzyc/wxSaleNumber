.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
	color: #aaa;
}

.userinfo-avatar {
	overflow: hidden;
	width: 128rpx;
	height: 128rpx;
	margin: 20rpx;
	border-radius: 50%;
}

.usermotto {
	margin-top: 400px;
}

.sticky-fixed {
  position: sticky;
  top: 0;
  right: 0;
  left: 0;
  z-index: 99;
}

.banner {
	width: 100%;
	height: 300rpx;
	overflow: hidden;
}